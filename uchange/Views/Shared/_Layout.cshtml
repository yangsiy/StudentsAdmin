<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/bootstrap.min.js")" type="text/javascript"></script>
    
    <style type="text/css">
        body {
            background-color: #F2F5FF;
        }

        table {
            background-color: #FCFCFA;
            margin-top: 20px;
            -webkit-box-shadow: 0 0 30px rgba(0, 0, 0, 0.5);
            -moz-box-shadow: 0 0 30px rgba(0, 0, 0, 0.5);
            box-shadow: 0 0 30px rgba(0, 0, 0, 0.5);
        }

        td {
            -webkit-box-shadow: 0 0 4px rgba(0, 0, 0, 0.5);
            -moz-box-shadow: 0 0 4px rgba(0, 0, 0, 0.5);
            box-shadow: 0 0 4px rgba(0, 0, 0, 0.5);
        }

        a {
            color: #DB7E56;
        }
    </style>
</head>
<body>
<div class="container" align="center" style="margin-top: 20px">
    <table class="table" style="border-radius: 20px">
        <thead>
        <td style="border-top-left-radius: 20px;border-top-right-radius: 20px">
            <div class="container-fluid">
                <div class="row-fluid">
                    <div class="col-md-8">
                        @if (ViewBag.dynamic==1)
                        {
                            <img src="@Url.Content("~/Content/images/dynamic.gif")" />
                        }
                        else
                        {
                            <img src="@Url.Content("~/Content/images/middle.png")" />
                        }
                    </div>
                    <div class="col-md-4">
                        @Html.Partial("_LogOnPartial")
                    </div>
                </div>
            </div>
        </td>
        </thead>
        <tbody>
        <tr>
            <td style="border-top-style:none">
                <ul class="nav nav-tabs nav-justified">
                <li>
                    <a href="/home/index"
                       style="text-decoration:none">Home</a>
                </li>
                @if (Request.IsAuthenticated)
                {
                <li><a href="/item/index"style="text-decoration:none">Item</a></li>
                <li><a href="/requests/index"style="text-decoration:none">Request</a></li>
                <li><a href="/requests/my"style="text-decoration:none">My Request</a></li>
                }
                </ul>
            </td>
        </tr>
        <tr>
            <td>
                @RenderBody()
            </td>
        </tr>
        <tr>
            <td style="text-align:center;font-weight:bold;color: #DB7E56;border-bottom-left-radius: 20px;border-bottom-right-radius: 20px">
                Copyright © 2013 DBL
            </td>
        </tr>
        </tbody>
    </table>
</div>
</body>
</html>
