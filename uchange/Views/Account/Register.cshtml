@model uchange.Models.RegisterModel

@{
    ViewBag.Title = "Register";
}

<html>
<head>
    <title>UChange</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" type="text/css" />
    <style type="text/css">
        body {
            background-color: #F2F5FF;
        }

        .field {
            background-color: #FCFCFA;
            margin: 20px;
            padding-top: 40px;
            padding-bottom: 40px;
            border-radius: 20px;
            -webkit-box-shadow: 0 0 30px rgba(0, 0, 0, 0.5);
            -moz-box-shadow: 0 0 30px rgba(0, 0, 0, 0.5);
            box-shadow: 0 0 30px rgba(0, 0, 0, 0.5);
        }

        div {
            font-size: 16px;
        }
    </style>
</head>
<body>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<div class="container" align="center">
    <div class="row-fluid" style="margin-top: 40px">
        <div class="col-md-3"></div>
        <div class="col-md-6 field">
            <h2><img src="@Url.Content("~/Content/images/logo-small.png")" style="margin-right: 40px">Register</h2>
            <div style="margin-top: 50px;padding-right: 0px">
            @using (Html.BeginForm())
            {
                <div class="row">
                <div class="col-md-6 col-md-offset-3">
                    <p><input type="text" class="form-control" name="username" placeholder="UserName"/></p>
                </div>
                </div>

                <div class="row">
                <div class="col-md-6 col-md-offset-3">
                    <p><input type="text" class="form-control" name="first_name" placeholder="First Name"/></p>
                </div>
                </div>

                <div class="row">
                <div class="col-md-6 col-md-offset-3">
                    <p><input type="text" class="form-control" name="last_name" placeholder="Last Name"/></p>
                </div>
                </div>

                <div class="row">
                <div class="col-md-6 col-md-offset-3">
                    <p><input type="email" class="form-control" name="email" placeholder="Email"/></p>
                </div>
                </div>

                <div class="row">
                <div class="col-md-6 col-md-offset-3">
                    <p><input type="password" class="form-control" name="password" placeholder="password"/></p>
                </div>
                </div>

                <div class="row">
                <div class="col-md-6 col-md-offset-3">
                    <p><input type="password" class="form-control" name="confirmpassword" placeholder="Confirm Password"/></p>
                </div>
                </div>
                
                <div class="row">
                <div class="col-md-12">
                    <br/>
                    <br/>
                    <button type="submit" class="btn submit btn-primary">Submit</button>
                </div>
                </div>
            }
        </div>
        </div>
    </div>
</div>
</body>
</html>